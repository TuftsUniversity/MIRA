<h1>Raw Metadata Batch Replacement</h1>

<%= bootstrap_form_for @metadata_import do |f| %>
  <% if @metadata_import.errors[:base].present? %>
    <div class="alert alert-danger">
      <h4>There were errors that prevented this batch metadata import from being saved:</h4>
      <ul>
        <% @metadata_import.errors[:base].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.file_field :metadata_file %>
  <%= f.submit 'Next' %>
<% end %>
